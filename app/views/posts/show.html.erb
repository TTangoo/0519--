<!--댓글-->

  <form action="/comments/create" method="POST">
    <div class="form-inline col-8 push-2">
      <input type="hidden" name="post_id" value="<%= @post.id %>">
      <textarea class="form-control mb-2" name="comment_content"  id="user_comments" rows="1" placeholder="댓글달기"></textarea>
      <button type="submit" class="btn btn-warning">댓글달기</button>
    </div>
  </form>

  <hr>

 <div class="comments_list">
   <div class=" col-8 push-2">
      
      <h6>댓글 목록</h6>
      
      <% @comments.each do |c| %>
        <p><%=c.content%></p>
    
      <form action="/comments/destroy/<%=c.id%>" method="POST">
        <button type="submit" class="btn btn-primary">삭제</button>
      </form>
    
      <form action="/comments/edit/<%=c.id%>" method="POST">
        <button type="submit" class="btn btn-warning">수정</button>
        <hr>
      </form>
   <% end %>
    </div>
  </div>
